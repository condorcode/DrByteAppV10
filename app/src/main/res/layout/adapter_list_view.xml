<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/lv_txtv_nom_cli"
            android:layout_width="252dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:gravity="left"
            android:text="Nombre cliente"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lv_txtv_nom_equip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Nombre equipo"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lv_txtv_num_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="nÂ° serie"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lv_txt_estado"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/alert_amarillo"
            android:paddingLeft="23dp"
            android:paddingTop="5dp"
            android:text="estado"
            android:textSize="12sp" />


        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image"
            android:alpha="0.5"
            />

        <TextView
            android:id="@+id/lv_txt_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="fecha"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>